extends ../layouts/chatbox.pug
block content
  .container
    h3.text-center.mt-3.mb-3 Messaging
    .messaging
      .inbox_msg.shadow-lg
        .inbox_people
          .headind_srch
            .recent_heading
              h4 Chat
            .srch_bar
              form(method="get")
                .stylish-input-group
                  input.search-bar(type='text' name="q" value=q placeholder='Search' autocomplete="off")
                  span.input-group-addon
                    button(class="btn btn-dark ml-2") 
                      i.fa.fa-search(aria-hidden='true')
          if users
            .inbox_chat
              each user in users
                a(href="./chatbox/" + user.id)
                  .chat_list
                    .chat_people
                      .chat_img
                        img(src=user.avatar)
                      .chat_ib
                        h5= user.name 
          if recent
            .inbox_chat
              each item in recent
                a(href="./chatbox/" + item.id)
                  .chat_list
                    .chat_people
                      .chat_img
                        img(src=item.avatar)
                      .chat_ib
                        h5= item.name 