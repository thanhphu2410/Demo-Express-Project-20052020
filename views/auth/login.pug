extends ../layouts/login.pug
block content
    .container
        .row
            .col-sm-9.col-md-7.col-lg-5.mx-auto
            .card.card-signin.my-5
                .card-body
                    h5.card-title.text-center Sign In
                    form.form-signin(action="/auth/login", method="post")
                        .form-label-group
                            input#username.form-control(type="text" name="username" value=username, placeholder='Username', required='')
                            label(for='username') Username
                        .form-label-group
                            input#inputPassword.form-control(type="password" name="password" value=password, placeholder='Password', required='')
                            label(for='inputPassword') Password
                        label.mb-3 You don't have an account? 
                            a(href="/auth/register") Sign Up
                        br
                        if error    
                            label.mb-3.errorLabel= error
                        button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Sign in