extends ../layouts/login.pug
block content
    if error    
        .alert.alert-danger= error
    .container
        .row
            .col-sm-9.col-md-7.col-lg-5.mx-auto
            .card.card-signin.my-5
                .card-body
                    h5.card-title.text-center Sign Up
                    form.form-signin(action="/auth/register", method="post",enctype="multipart/form-data")
                        .form-label-group
                            input#username.form-control(type="text" name="username" placeholder='Username' required='')
                            label(for='username') Username
                        .form-label-group
                            input#inputPassword.form-control(type="password" name="password" placeholder='Password' required='')
                            label(for='inputPassword') Password
                        .form-label-group
                            input#name.form-control(type="text" name="name" placeholder='name' required='')
                            label(for='name') Name
                        .form-label-group
                            input#phone.form-control(type="text" name="phone" placeholder='Password' required='')
                            label(for='phone') Phone Number
                        .form-label-group
                            .input-group.mb-3
                                .custom-file
                                    input#inputGroupFile02.custom-file-input(type='file' name="avatar" required='')
                                    label.custom-file-label(for='inputGroupFile02') Choose file
                        button.btn.btn-lg.btn-primary.btn-block.text-uppercase(type='submit') Sign up